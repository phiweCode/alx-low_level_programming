#include "main.h"
#include <stdio.h>

/**
 * print_line - prints the shortest
 * line 
 * @n: length of line
 */

void print_line(int n)
{
  int i;
  if (n > 0)
  { 
  for (i = 0; i < n; i++)
    {
      putchar('_');
    }
  }
  putchar('\n');
}

int main(void)
{
  print_line(0);
  print_line(2);
  print_line(10);
  print_line(-4);
  return (0);
}
